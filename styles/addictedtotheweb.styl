border-top-left-radius()
  -webkit-border-top-left-radius arguments
  -moz-border-top-left-radius arguments
  border-top-left-radius arguments

border-top-right-radius()
  -webkit-border-top-right-radius arguments
  -moz-border-top-right-radius arguments
  border-top-right-radius arguments

border-bottom-left-radius()
  -webkit-border-bottom-left-radius arguments
  -moz-border-bottom-left-radius arguments
  border-bottom-left-radius arguments

border-bottom-right-radius()
  -webkit-border-bottom-right-radius arguments
  -moz-border-bottom-right-radius arguments
  border-bottom-right-radius arguments

shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

shadowcolor = #404

body
  background-color #848
  color white
  font-family sans-serif

.content
  min-width 960px

img 
  border 0px solid transparent

a
  font-weight bold
  text-decoration none
  color inherit

a:hover
  text-decoration underline

h1
  font-size 26px
  font-variant small-caps
  text-align center
  text-shadow 1px 1px 2px #444

h2
  margin-top 40px
  font-size 22px

h3
  font-variant small-caps
  font-size 26px
  text-align center
  text-shadow 1px 1px 2px #444

.twtr-hd 
.twtr-ft
  display none

div.subject
  width 27%
  padding 20px
  min-height 490px
  float left
  border 10px solid transparent

div.project
  width 27%
  padding 20px
  float left
  min-height 600px
  text-align center
  border 10px solid transparent
  -webkit-transition: all 1s ease;
  -moz-transition: all 1s ease;
  -o-transition: all 1s ease;
  shadow(5px 5px 5px shadowcolor)


div.project:hover
  shadow(2px 2px 15px #FCC)


p.related
  font-style italic

.spacer
  width 100% 
  clear both

#presentation
  background-color #44AA44
  border-top-left-radius(30px 20px)
  border-bottom-left-radius(30px 20px)
  shadow(5px 5px 5px shadowcolor)
  text-align center

#photo
  padding-left 20px
  padding-top 20px
  width 130px

#publication
  background-color #45A0E3
  text-align center
  shadow(5px 5px 5px shadowcolor)

#pictures
  background-color #DD0084
  text-align center
  border-top-right-radius(30px 20px)
  border-bottom-right-radius(30px 20px)
  shadow(5px 5px 5px shadowcolor)
  
#pictures h3
  text-align center

#cozy
  border-top-left-radius(30px 20px)
  border-bottom-left-radius(30px 20px)
  background-color #9999AD

#newebe
  background-color #FFFFFF
  color #000000

#artforge
  background-color #F4A012
  color #fff3dd

#beburlesque
  background-color #473531
  color #fbe3dd
  border-top-right-radius(30px 20px)
  border-bottom-right-radius(30px 20px)

#your-project
  border 10px solid transparent
  background-color #4A4

#twinkso
  border-bottom-left-radius(30px 20px)
  border-top-left-radius(30px 20px)
  background-color black

#dolebrai
  border-top-right-radius(30px 20px)
  background-color #6833CC
  color #EFE8FA
  border-bottom-right-radius(30px 20px)


#latest-flickr-images ul
  list-style-type none
  margin 0
  padding 0

#latest-flickr-images li
  margin 0
  padding 0

.emphaze
  margin-top 50px
  font-weight bold
  font-size 20px

.section-title
  text-shadow 4px 4px 2px shadowcolor
  width 92%

