@font-face
    font-family main
    font-style normal
    src url(fonts/lato.woff)

@font-face
    font-family styled
    font-style normal
    src url(fonts/freight-light.woff)


body
    background-color #FEFEFE
    color #333
    font-family styled
    font-size 22px
    margin 0

#photo
    margin-bottom 2em

p:first-child
    margin-bottom 1em

p:last-child
    margin-bottom 0

#photo
    border-radius 50%

.headline
    text-align center
    font-size 3em
    line-height 1.5em
    min-height 90vh
    padding-top 20vh

    .main
        font-weight bold

.content
    max-width 800px
    margin auto

.center
    text-align center

a
a:hover
a:visited
    color #333

a:visited
    color #333

.social
    margin 2em 0 6em 0

    img
        width 2em
        margin 0 1em
