border-top-left-radius()
  -webkit-border-top-left-radius arguments
  -moz-border-top-left-radius arguments
  border-top-left-radius arguments

border-top-right-radius()
  -webkit-border-top-right-radius arguments
  -moz-border-top-right-radius arguments
  border-top-right-radius arguments

border-bottom-left-radius()
  -webkit-border-bottom-left-radius arguments
  -moz-border-bottom-left-radius arguments
  border-bottom-left-radius arguments

border-bottom-right-radius()
  -webkit-border-bottom-right-radius arguments
  -moz-border-bottom-right-radius arguments
  border-bottom-right-radius arguments

shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

shadowcolor = #404

body
  background-color #848
  color white
  font-family sans-serif

img 
  border 0px solid transparent

a
  font-weight bold
  text-decoration none
  color inherit

a:hover
  text-decoration underline

h1
  font-size 26px
  font-variant small-caps
  text-align center

h2
  margin-top 40px
  font-size 22px

h3
  font-variant small-caps
  font-size 26px
  text-align center

.twtr-hd 
.twtr-ft
  display none

div.subject
  width 27%
  padding 20px
  min-height 490px
  float left
  border 10px solid transparent

div.project
  width 27%
  padding 20px
  float left
  min-height 600px
  text-align center
  border 10px solid transparent

p.related
  font-style italic

.spacer
  width 100% 
  clear both

#presentation
  background-color #44AA44
  border-top-left-radius(30px 20px)

#photo
  float right
  padding-left 20px
  padding-top 20px
  width 150px

#publication
  background-color #45B0E3
  text-align center

#pictures
  background-color #FF0084
  text-align center
  border-top-right-radius(30px 20px)
  shadow(5px 5px 5px shadowcolor)
  
#pictures h3
  text-align center

#newebe
  background-color #FFFFFF
  color #000000

#artforge
  background-color #F4A012
  color #fff3dd
  border-bottom-left-radius(30px 20px)
  shadow(5px 5px 5px shadowcolor)

#beburlesque
  background-color #473531
  color #fbe3dd

#your-project
  border 10px solid transparent
  background-color #4A4
  border-bottom-right-radius(30px 20px)
  shadow(5px 5px 5px shadowcolor)

#twinkso
  background-color black
  shadow(5px 5px 5px shadowcolor)

#dolebrai
  background-color #6833CC
  color #EFE8FA
  shadow(5px 5px 5px shadowcolor)


#latest-flickr-images ul
  list-style-type none
  margin 0
  padding 0

#latest-flickr-images li
  margin 0
  padding 0

.emphaze
  font-style italic
  font-size 20px
